@model KnowledgeTesting.Models.CreateTestViewModel

@{
  ViewBag.Title = "Создать тест";
}

<h2>Создать тест:</h2>

@using (Html.BeginForm("SaveNewTest", "TestManagement"))
{
  <div class="form-group">
    <label for="exampleInputEmail1">Название теста:</label>
    @*<input name="Name" placeholder="Название" type="text" class="form-control" maxlength="254" value="@Model.Test.Name">*@
    @Html.EditorFor(Model => @Model.Test.Name)
  </div>

  <div class="form-group">
    <label for="exampleInputPassword1">Краткое описание:</label>
    @*<textarea name="Description" placeholder="Описание" class="form-control" rows="3" maxlength="500">@Model.Test.Description</textarea>*@
    @Html.EditorFor(Model => @Model.Test.Description)
  </div>

  <p>@Model.Notification</p>

  <button type="submit" class="btn btn-default">Сохранить</button>
}